generator client {
  provider        = "prisma-client-js"
  binaryTargets   = [env("PRISMA_BINARY_TARGET")]
  previewFeatures = ["filteredRelationCount"]
}

generator nestgraphql {
  provider                        = "node node_modules/prisma-nestjs-graphql"
  output                          = "../src/prisma/@generated"
  reExport                        = "All"
  fields_Scalars_from             = "graphql-scalars"
  fields_Scalars_input            = true
  fields_Scalars_output           = true
  graphqlScalars_BigInt_name      = "GraphQLBigInt"
  graphqlScalars_BigInt_specifier = "graphql-scalars"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_WITH_SCHEMA")
}

enum GoalType {
  value
}

enum GoalLevel {
  pessimist
  realist
  optimist
}

model User {
  /// ID
  id             Int              @id @default(autoincrement())
  /// @Validator.IsEmail()
  email          String           @unique
  /// Name
  name           String

  /// Relations
  InvestmentPlan InvestmentPlan[]
}

model InvestmentPlan {
  /// ID
  id   Int      @id @default(autoincrement())
  /// Starting Date
  date DateTime @db.Date

  /// Relations
  InvestmentGoal InvestmentGoal[]
  blameUserId    Int?
  blameUser      User?            @relation(fields: [blameUserId], references: [id])
}

model InvestmentGoal {
  /// ID
  id                 Int       @id @default(autoincrement())
  /// Type
  type               GoalType
  /// Level
  level              GoalLevel
  /// Montly value to apport (in cents)
  monthlyApportValue Int
  /// Value to be reached (in cents)
  value              Int
  /// Yearly rentability tax (percentage * 100, allowing 2 decimal places)
  rentabilityTax     Int

  /// Relations
  investmentPlanId Int
  investmentPlan   InvestmentPlan @relation(fields: [investmentPlanId], references: [id])

  @@unique([type, level])
}
